@using UniversityReview.Models;
@model IEnumerable<UniversityListViewModel>
@{
    ViewBag.Title = "Home Page";
}

<form method="get" >

    <input type="search" name="searchTerm"  />
    <input type="submit" value="Search By Name" />

</form>



@foreach (var item in Model)
{
    <div>
        <h4>
            @item.Name
        </h4>
        <div>@item.City</div>

    </div>
}